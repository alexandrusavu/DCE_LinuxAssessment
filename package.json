{
  "name": "linux-assessment-platform",
  "version": "1.0.0",
  "description": "Web-based Linux assessment platform with MCQs and bash simulator",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "start": "node server/index.js",
    "server": "nodemon server/index.js",
    "client": "vite",
